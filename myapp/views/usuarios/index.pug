extends ../layout

block content  
  .jumbotron
    h1 Usuários
    a(href="/usuarios/create", class="btn btn-success") Cadastrar
    br
    br
    p= messages
    if messages && messages.erro
      div(class="alert alert-danger")
        p= messages.erro
    if messages && messages.info
      div(class="alert alert-success")
        p= messages.info
    if lista.length > 0
      table(class="table table-striped")
        thread
          tr
            th ID:
            th Nome:
            th Email:
            th Data:
            th Ações:
        tbody
          each valor in lista
            tr
              td #{valor._id}
              td #{valor.nome}
              td #{valor.email}
              td #{moment(valor.data_cad).format("DD/MM/YYYY HH:mm:ss")}
              td
    else
      p Nenhum registro encontrado!
