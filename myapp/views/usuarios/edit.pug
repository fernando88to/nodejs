extends ../layout

block content
    h1 Atualizar Usu√°rio
    hr
    br
    if messages && messages.erro
          div(class="alert alert-danger")
            p= messages.erro
    if messages && messages.info
          div(class="alert alert-success")
            p= messages.info
    form(method="POST", action=`/usuarios/edit/${dados._id}`, role="form")
      div(class="form-group")
        label Nome
        input(type="text", class="form-control", name="nome", placeholder="Nome", autofocus, value=`${dados.nome}`)
      div(class="form-group")
        label E-mail
        input(type="email", class="form-control", name="email", placeholder="Email", value=`${dados.email}` disabled)
      div(class="form-group")
        label Site
        input(type="text", class="form-control", name="site", placeholder="Site", value=`${dados.site}`)      
      button(type="submit", class="btn btn-success") Salvar
    br
    br
    a(href="/usuarios") Voltar

